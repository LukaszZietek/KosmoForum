@model KosmoForumClient.Models.View.ForumPostVM

@{
    var title = "Stwórz posta";
}

<style>
    .container2 {
        position: relative;
        width: 100%;
        max-width: 400px;
    }

    .container2 img {
        width: 100%;
        height: auto;
    }

    .container2 .btn {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        background-color: red;
        font-size: 16px;
        padding: 16px 30px;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        text-align: center;
        display: none;
    }

    .container2:hover img
    {
        opacity: 0.3;
    }

    .container2:hover .btn
    {
        background-color: black;
        color: white;
        display: block;
    }

    .container2 .btn:hover {
        background-color: red;
        color: white;
    }
</style>


<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.forumPost.Id != 0)
        {
            <input type="hidden" id="forumPostId" asp-for="forumPost.Id" />
            title = "Edycja posta";
        }
        <input type="hidden" id="imagesCount" asp-for="forumPost.Images.Count" />

        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    Kategoria
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.forumPost.CategoryId, Model.CategoryList, "-Wybierz kategorie",
                        new { @class = "form-control" })
                    <span asp-validation-for="forumPost.CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="forumPost.Title"></label>
                </div>
                <div class="col-8">
                    <input asp-for="forumPost.Title" class="form-control" />
                    <span asp-validation-for="forumPost.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="forumPost.Content"></label>
                </div>
                <div class="col-8">
                    <input asp-for="forumPost.Content" class="form-control" />
                    <span asp-validation-for="forumPost.Content" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="forumPost.Images"></label>
                </div>
                <div class="col-8">
                    <input type="file" asp-for="forumPost.Images" id="projectImage" name="files" multiple class="form-control" onchange="checkFilesCount(this)" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.forumPost.Id != 0 ? "Uaktualnij" : "Stwórz")
                    </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Powrót</a>
                </div>
            </div>
        </div>
        <div class="col-4 text-right" style="width: 250px;">
            @if (Model.forumPost.Images != null)
            {
                foreach (var item in Model.forumPost.Images)
                {

                    var base64 = Convert.ToBase64String(item.Picture);
                    var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                    <div class="container2">
                        <img src="@imgSrc" style="width: 100%" />
                        <a onclick="DeleteImage(@item.Id)" class='btn btn-danger text-white' style='cursor:pointer;'> <i class='far fa-trash-alt'></i></a>
                    </div>

                }
            }
        </div>
    </div>

</form>

<script>
    function DeleteImage(data) {
        $.ajax({
            url: "/image/DeleteImage/" + data,
            type: 'DELETE',
            success: function(data) {
                if (data.success) {
                    location.reload();

                }
            }
        });
    }


    function checkFilesCount(id) {
        var value = parseInt(document.getElementById("imagesCount").value);
        if (parseInt(id.files.length) + value > 3)
        {
            toastr.error("Załadowałeś za dużo plików, maksymalnie 3");
            document.getElementById("projectImage").value = "";
        }

    }
</script>