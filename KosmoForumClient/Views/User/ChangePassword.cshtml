@model KosmoForumClient.Models.View.ChangePasswordVM

<div class="container p-5" align="center">

    <form method="post" asp-action="ChangePassword" enctype="multipart/form-data" onsubmit="return checkPassword()">

        <div class="shadow-lg justify-content-center p-3 w-auto" align="center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12 p-3">
                <h2 class="text-primary">Zmiana hasła</h2>
            </div>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="OldPassword"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="OldPassword" class="form-control" type="password" placeholder="Stare hasło.." />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="NewPassword"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NewPassword" class="form-control" type="password" id="newPassword" placeholder="Nowe Hasło..." />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="NewPassword"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" type="password" id="retypePassword" onchange="CheckPasswords(this)" placeholder="Powtórz hasło..." />
                        <label id="warningMessage" class="text-danger">Hasła różnią się od siebie, popraw to !</label>
                    </div>

                </div>
                <button type="submit" value="Submit" class="btn btn-primary btn-block rounded-pill">Zmień hasło</button>
            </div>
        </div>
    </form>

</div>

