@model KosmoForumClient.Models.Opinion
@{
    var title = "Stwórz opinie";
}


<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Id != 0)
        {
            <input type="hidden" asp-for="Id" />
            title = "Edycja opinii";
        }
        <input type="hidden" asp-for="ForumPostId" />

        <div class="col-12 p-3">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Content"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Marks"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Marks" asp-items="Html.GetEnumSelectList<Opinion.MarksType>()" class="form-control"></select>
                    
                   
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">
                        @(Model.Id!=0 ? "Aktualizuj":"Stwórz")
                    </button>
                </div>
                <div class="col-4">
                    @Html.ActionLink("Powrót", "ReadForumPost", "ForumPost", new { id = Model.ForumPostId })
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts
{
    <script type="text/javascript">
    </script>
}


